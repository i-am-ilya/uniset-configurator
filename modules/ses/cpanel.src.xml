<?xml version="1.0" encoding="utf-8"?>
<!--
	name 		- название класса
	msgcount	- сколько сообщений обрабатывается за один раз
	sleep_msec	- пауза между итерациями в работе процесса

	type
	====
		in 	- входные регистры (только для чтения)
		out	- выходные регистры (запись)
		io  - запись и чтение
-->
<CPanel>
  <settings>
  	<set name="class-name" val="CPanel"/>
	<set name="base-class" val="ObjectsManager"/>
  	<set name="msg-count" val="30"/>
	<set name="sleep-msec" val="200"/>
  </settings>
  <params>
		<item name="ctlHeartbeat" type="sensor"/>
		<item name="heartbeat_id" type="sensor"/>
		<item name="StartingTime" type="int"/>
  </params>
  <smap>
	<!-- разное -->
	<item name="onPanel" vartype="out" iotype="DO" comment="Вкл/Откл данная панель" no_check_id="1"/>
    <item name="keyTestLamp" vartype="in" iotype="DI" comment="test lamp" no_check_id="1"/>
 	<item name="idPost" vartype="in" iotype="AI" comment="ID выбранного поста управления"/>
        	
	<!-- управление лампочками выбора поста --> 
	<item name="ctlMode_s" vartype="in" iotype="AO" 	comment="Лампочка: управление отключено" />
	
	<item name="lmpCtlLocal_c" vartype="out" iotype="AO" 	comment="Лампочка: управление отключено" />
	<item name="lmpCtlPult_c" vartype="out" iotype="AO" 	comment="Лампочка: ручное управление с ПУС" />
	<item name="lmpCtlAuto_c" vartype="out" iotype="AO" 	comment="Лампочка: автоматическое управление" />

	<!-- кнопки управления --> 
	<item name="DG_ON_c" vartype="in" iotype="AO" comment="DG on" />
	<item name="DG_OFF_c" vartype="in" iotype="AO" comment="DG off" />
	<item name="QG_ON_c" vartype="in" iotype="AO" comment="QG on" />
	<item name="QG_OFF_c" vartype="in" iotype="AO" comment="QG off" />

	<!-- управление лампочками на кнопках -->  
	<item name="lmpDG_ON_c" vartype="out" iotype="AO" comment="lamp DG on" />
	<item name="lmpDG_OFF_c" vartype="out" iotype="AO" comment="lamp DG off" />
	<item name="lmpQG_ON_c" vartype="out" iotype="AO" comment="lamp QG on" />
	<item name="lmpQG_OFF_c" vartype="out" iotype="AO" comment="lamp QG off" />
	
	<item name="ctlRespond" vartype="in" iotype="DI" comment="контроль датчика связи"/>
	<item name="ctlHeartbeat" vartype="in" iotype="DI" comment="контроль датчика 'сердцебиения' процесса управления"/>
	<item name="panelFailure" vartype="out" iotype="DI" comment="сбой в работе панели"/>
  </smap>

  <msgmap></msgmap>
</CPanel>
