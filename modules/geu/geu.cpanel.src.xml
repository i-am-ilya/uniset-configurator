<?xml version="1.0" encoding="utf-8"?>
<CPanel>
  <settings>
  	<set name="class-name" val="CPanel"/>
	<set name="base-class" val="ObjectsManager"/>
  	<set name="msg-count" val="30"/>
	<set name="sleep-msec" val="200"/>
  </settings>
  <params>
	   <item name="prior" type="int" min="0"/>
  </params>
  <smap>
  		<!-- Приборы индикации -->
		<item name="curRPM" vartype="in" iotype="AI" comment="текущая частота вращения вала"/>
		<item name="curReservPower" vartype="in" iotype="AI" comment="резерв мощности СЭС"/>
		<item name="curPower" vartype="in" iotype="AI" comment="мощность ГЭД"/>
		<item name="indCurRPM" vartype="out" iotype="AO" comment="прибор: текущая частота вращения вала"/>
		<item name="indCurReservPower" vartype="out" iotype="AO" comment="прибор: резерв мощности СЭС"/>
		<item name="indCurPower" vartype="out" iotype="AO" comment="прибор: мощность ГЭД"/>

		<!-- Задатчик скорости -->
		<item name="keyUp" vartype="in" iotype="DI" comment="Up rpm" no_check_id="1"/>
		<item name="keyDown" vartype="in" iotype="DI" comment="Down rpm" no_check_id="1"/>
		<item name="keyZero" vartype="in" iotype="DI" comment="Zero rpm" no_check_id="1"/>
		<item name="joystickRPM" vartype="in" iotype="AI" comment="Текущие заданные обороты с джойстика" no_check_id="1"/>
		<item name="joystickZero" vartype="in" iotype="DI" comment="Ручка в нуле" no_check_id="1"/>
		<item name="curSetRPM" vartype="out" iotype="AO" comment="Текущие заданные обороты"/>
		<item name="lmpAhead" vartype="out" iotype="AO" comment="лампочка: вперёд" no_check_id="1"/>
		<item name="lmpAback" vartype="out" iotype="AO" comment="лампочка: назад" no_check_id="1"/>
	
		<!-- Разные лампочки и кнопочки -->
		<item name="keyTestLamp" vartype="in" iotype="DI" comment="test lamp" no_check_id="1"/>
		<item name="alarmBreak" vartype="in" iotype="DI" comment="(грибок): Аварийное отключение ГЭД"/>
		<item name="lmpPowerLimit" vartype="out" iotype="AO" comment="лампочка: ограничение мощности" no_check_id="1"/>
		<item name="powerLimit" vartype="in" iotype="DI" comment="режим ограничения мощности"/>
		<item name="lmpNeedPowerLimit" vartype="out" iotype="AO" comment="лампочка: требование снизить мощность" no_check_id="1"/>
		<item name="needPowerLimit" vartype="in" iotype="DI" comment="требование снизить мощность"/>
		<item name="geuAlarm" vartype="in" iotype="DI" comment="Авария ГЭУ"/>
		<item name="CS_Failed_Lamp" vartype="out" iotype="DI" comment="лампочка: Неисправность СУ ГУЭ"/>
		

		<!-- ВКЛ/ОТКЛ панели -->
  		<item name="onPanel" vartype="out" iotype="DO" comment="Вкл/Откл данная панель" no_check_id="1"/>
  		<item name="onControl" vartype="out" iotype="DI" comment="Вкл/Откл управление с данной панели"/>
  		
  		<!-- сбой в работе СУ -->
		<item name="ctlRespond" vartype="in" iotype="DI" comment="контроль работы процесса управления"/>
		<item name="ctlFailure" vartype="in" iotype="DI" comment="сбой в процессе управления"/>
		<item name="ctlProtecionMode" vartype="in" iotype="DI" comment="сбой в алгоритме управления (ProtectionMode)"/>
		<item name="panelFailure" vartype="out" iotype="DI" comment="сбой в работе панели"/>
		<item name="fqcNotRespond" vartype="in" iotype="DI" comment="нет связи с ЛСУ ПЧ"/>
		<item name="canNotRespond" vartype="in" iotype="DI" comment="нет связи по CAN"/>

		<!-- Работа с выбором поста управления -->
		<item name="idPost" vartype="in" iotype="AI" comment="ID выбранного поста управления"/>
		<item name="ctlThisPanel" vartype="in" iotype="DI" comment="Управление с данной панели"/>
		<item name="ctlLocalPost" vartype="in" iotype="DI" comment="Местное управление"/>
		<item name="ctlRemotePost" vartype="in" iotype="DI" comment="Управление с другого поста" no_check_id="1"/>
		<item name="lmpCtlThisPanel" vartype="out" iotype="AO" comment="(лампочка): Управление с данной панели"/>
		<item name="lmpCtlLocalPost" vartype="out" iotype="AO" comment="(лампочка): Местное управление"/>
		<item name="lmpCtlRemotePost" vartype="out" iotype="AO" comment="(лампочка): Управление с другого поста" no_check_id="1"/>

		<!-- Управление -->
		<item name="btnON" vartype="in" iotype="DI" comment="кнопка 'Включение ГЭУ'"/>
		<item name="btnOFF" vartype="in" iotype="DI" comment="кнопка 'Отключение ГЭУ'"/>
		<item name="allowEnable" vartype="in" iotype="DI" comment="Разрешено влючение ГЭУ"/>
		<item name="lmpBtnON" vartype="out" iotype="AO" comment="(лампочка): Включение ГЭУ"/>
		<item name="lmpBtnOFF" vartype="out" iotype="AO" comment="(лампочка): Отключение ГЭУ"/>
		<item name="lmpAllowEnable" vartype="out" iotype="AO" comment="(лампочка): разрешено влючение ГЭУ"/>
		<item name="GEU_lmpON" vartype="in" iotype="AO" comment="Текущее (глобадбное) состояние лампочки: 'Включение ГЭУ'"/>
		<item name="GEU_lmpOFF" vartype="in" iotype="AO" comment="Текущее (глобальное) состояние лампочки: 'Отключение ГЭУ'"/>
		<item name="needResetProtection" vartype="in" iotype="DI" comment="Требуется сбросить защиту"/>
		<item name="lmpResetProtection" vartype="out" iotype="AO" comment="(лампочка): 'Сброс защиты'"/>

		<!-- отключение защиты -->
		<item name="btnProtectionOFF" vartype="in" iotype="DI" comment="кнопка 'Отключение защиты'"/>
		<item name="isProtectionOFF" vartype="in" iotype="DI" comment="'Защита отключена'"/>
		<item name="cmdProtectionOFF" vartype="out" iotype="DO" comment="команда на 'Отключение защиты'"/>
		<item name="lmpProtectionOFF" vartype="out" iotype="AO" comment="лампочка 'Защита отключена'"/>
  </smap>

  <msgmap></msgmap>
</CPanel>
