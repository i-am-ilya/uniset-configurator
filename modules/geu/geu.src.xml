<?xml version="1.0" encoding="utf-8"?>
<!--
	name 		- название класса
	msgcount	- сколько сообщений обрабатывается за один раз
	sleep_msec	- пауза между итерациями в работе процесса

	type
	====
		in 	- входные регистры (только для чтения)
		out	- выходные регистры (запись)
		io  - запись и чтение
-->
<GEU>
  <settings>
  	<set name="class-name" val="GEU"/>
	<set name="base-class" val="ObjectsManager"/>
  	<set name="msg-count" val="30"/>
	<set name="sleep-msec" val="150"/>
  </settings>
  <params>
  	  <item name="number" type="int" min="0"/>
	  <item name="GlobalLockControlTime" type="int" min="0"/>
	  <item name="GlobalLockWaitingTime" type="int" min="0"/>
	  <item name="BlockStartWaitTime" type="int" min="0"/>
	  <item name="ChargeTime" type="int" min="0"/>
	  <item name="FQCOffTime" type="int" min="0"/>
	  <item name="FQCOnTime" type="int" min="0"/>
	  <item name="Pnom" type="int" min="0"/>
	  <item name="QMOffTime" type="int" min="0"/>
	  <item name="QMOnTime" type="int" min="0"/>
	  <item name="QPOffTime" type="int" min="0"/>
	  <item name="QPOnTime" type="int" min="0"/>
	  <item name="initPause" type="int" min="0"/>
	  <item name="powerLimit" type="int" min="0"/>
	  <item name="powerLimitTime" type="int" min="0"/>
	  <item name="resetPause" type="int" min="0"/>
  </params>
  <smap> 
  	<!-- name - название переменной в конф. файле -->
	<item name="isPowerLimit_s" vartype="in" iotype="DI" comment="ПЧ перешёл в режим ограничения мощности" />     
	<item name="On_f" vartype="in" iotype="DI" comment="GEU ON command" />
	<item name="Off_f" vartype="in" iotype="DI" comment="GEU OFF command" />
	<item name="Reset_f" vartype="in" iotype="DI" comment="GEU reset command" />
	<item name="SEES_Ready_f" vartype="in" iotype="DI" comment="sees ready for loading" />
	<item name="Ready_c" vartype="out" iotype="DO" comment="GEU ready for loading" />
	<item name="LampON_c" vartype="out" iotype="AO" comment="lamp on" />
	<item name="LampOFF_c" vartype="out" iotype="AO" comment="lamp off" />
	<item name="ProtectionMode_f" vartype="out" iotype="DI" comment="protection" />
	<item name="needPower_c" vartype="out" iotype="DI" comment="need power (for SES)" />
	<item name="allowEnable_c" vartype="out" iotype="DI" comment="allow enable" />
  </smap>
  
  <msgmap>
  	<!-- name - название переменной в конф. файле -->
	<item name="mid_starting" comment="код сообщения 'запуск'" />
	<item name="mid_stopping" comment="код сообщения 'остановка'" />
	<item name="mid_endStarting" comment="код сообщения завершение пуска(остановки)" />
	<item name="mid_endStopping" comment="код сообщения завершение пуска(остановки)" />
	<item name="mid_NotOn" comment="код сообщения 'Отказ включения'" />
	<item name="mid_NotOff" comment="код сообщения 'Отказ отключения'" />
	<item name="mid_sees_not_ready" comment="код причины 'нет готовности СЭС'" />
	<item name="mid_ProtectionNotReset" comment="код причины 'не восстановлена защита'" />
	<item name="mid_fqc_NotOn" comment="" />
	<item name="mid_fqc_NotOff" comment="" />
	<item name="mid_NotFinished" comment="код сообщения 'назавершённый пуск или остановка'" />
	<item name="mid_NA_State" comment="код сообщения 'Неопределённое состояние'" />
	<item name="mid_ProtectionOn" comment="код сообщения 'Режим защиты'" />
	<item name="mid_ProtectionOff" comment="код сообщения 'Снятие режима защиты'" />
	<item name="mid_ProtectionOn_Att" comment="код причины 'Режим защиты' (Внимание)"/>
	<item name="mid_ProtectionNotReset_Att" comment="код причины 'не восстановлена защита' (Внимание)"/>
	<item name="mid_NotAccept" comment="код сообщения 'запрет одновременного включения'" />
  </msgmap>
</GEU>